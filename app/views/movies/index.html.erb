<h1 class="text-center">Movies list</h1>
<div class="container pt-2 pb-2" style="background: rgb(246, 243, 243); margin-top: 10px; border-radius: 10px">
<table class="table table-striped table-bordered mt-3">
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Year</th>
    <th>Open</th>
  </tr>
  <% @movies.each do |movie| %>
    <tr>
      <td> <%= movie.id %> </td>
      <td> <%= movie.name %> </td>
      <td> <%= movie.year %> </td>
      <td> <%= link_to('Open', movie_path(movie), class:"movie_open") %> </td>
    </tr>
  <% end %>
</table>
</div>


